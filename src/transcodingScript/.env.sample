# AWS REGION
AWS_REGION=ap-south-1

# AWS IAM Credentials (Don't expose these in production!)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Optional: Custom S3 endpoint (e.g., if using MinIO or localstack)
# Leave blank if using AWS S3
S3_ENDPOINT=

# S3 Bucket where raw videos are initially uploaded
BUCKET_NAME=your-raw-bucket-name

# S3 Object Key (i.e., the relative path of the uploaded file)
# Example: uploads/my-video.mp4
KEY=

# Destination bucket where transcoded HLS files will be saved
PRODUCTION_BUCKET=your-production-bucket-name
